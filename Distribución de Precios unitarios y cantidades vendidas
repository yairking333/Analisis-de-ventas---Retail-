import seaborn as sns


ventas_df = pd.read_csv('ventas.csv')


plt.figure(figsize=(12, 6))

# Distribuci贸n de precios unitarios
plt.subplot(1, 2, 1)
sns.histplot(ventas_df['precio_unitario'], kde=True)
plt.title('Distribuci贸n de Precios Unitarios')
plt.xlabel('Precio Unitario')

# Distribuci贸n de cantidades vendidas
plt.subplot(1, 2, 2)
sns.histplot(ventas_df['cantidad_venta'], kde=True)
plt.title('Distribuci贸n de Cantidades Vendidas')
plt.xlabel('Cantidad Vendida')

